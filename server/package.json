{
  "name": "faucet-server",
  "version": "0.0.1",
  "description": "Ocean Protocol Faucet Server for testnet",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "babel --source-maps --out-dir=dist ./",
    "watch": "nodemon server.js --exec babel-node --presets babel-preset-env",
    "test": "mocha --require babel-register --require tests/env.js --timeout 20000 tests/test*.js --exit",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "cov-report": "nyc report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oceanprotocol/faucet.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oceanprotocol/faucet/issues"
  },
  "homepage": "https://github.com/oceanprotocol/faucet#README",
  "dependencies": {
    "@oceanprotocol/squid": "^0.2.7",
    "async": "^2.6.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "ethjs": "^0.4.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "moment": "^2.24.0",
    "mongoose": "^5.4.10",
    "mongoose-timestamp": "^0.6.0",
    "request-ip": "^2.1.3",
    "require-reload": "^0.2.2",
    "web3": "^1.0.0-beta.43"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.13.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocked-env": "^1.2.4",
    "nodemon": "^1.18.9",
    "nyc": "^13.2.0",
    "prettier": "^1.16.4",
    "prettierrc": "^0.0.0-5",
    "require-reload": "^0.2.2",
    "typedarray-to-buffer": "^3.1.5"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "**/*.js",
      "./*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**"
    ],
    "all": true
  }
}
