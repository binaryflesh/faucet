{
  "name": "faucet-server",
  "version": "0.0.1",
  "description": "Ocean Protocol Faucet Server for testnet",
  "main": "server.js",
  "scripts": {
    "start": "./scripts/copy-artifacts.sh && DEBUG=faucet:* node dist/server.js",
    "build": "rimraf ./dist && babel --out-dir ./dist --ignore node_modules ./",
    "watch": "./scripts/copy-artifacts.sh && nodemon server.js",
    "test": "./scripts/copy-artifacts.sh && npm run lint && mocha --require babel-register --require tests/env.js --timeout 20000 tests/test*.js --exit",
    "tests": "mocha --require babel-register --require tests/env.js --timeout 20000 tests/test*.js --exit",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "cov-report": "nyc report",
    "format:js": "prettier --write '**/*.{js,jsx}'",
    "format:css": "prettier-stylelint --write --quiet 'src/**/*.{css,scss}'",
    "format": "run-p format:js format:css",
    "lint:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .js,.jsx .",
    "lint:css": "stylelint './**/*.{css,scss}'",
    "lint": "run-p --continue-on-error lint:js lint:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oceanprotocol/faucet.git"
  },
  "author": "Ocean Protocol <devops@oceanprotocol.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oceanprotocol/faucet/issues"
  },
  "homepage": "https://github.com/oceanprotocol/faucet#README",
  "dependencies": {
    "@oceanprotocol/squid": "^0.3.0",
    "async": "^2.6.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "ethjs": "^0.4.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "moment": "^2.24.0",
    "mongoose": "^5.4.14",
    "mongoose-timestamp": "^0.6.0",
    "request-ip": "^2.1.3",
    "require-reload": "^0.2.2",
    "rimraf": "^2.6.3",
    "web3": "^1.0.0-beta.43",
    "yaeti": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.13.0",
    "eslint-config-oceanprotocol": "^1.3.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.1",
    "mocked-env": "^1.2.4",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.2.0",
    "prettier": "^1.16.4",
    "prettier-stylelint": "^0.4.2",
    "require-reload": "^0.2.2",
    "stylelint": "^9.10.1",
    "stylelint-config-bigchaindb": "^1.2.1",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-standard": "^18.2.0",
    "typedarray-to-buffer": "^3.1.5"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "**/*.js",
      "./*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**"
    ],
    "all": true
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
